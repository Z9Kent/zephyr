/dts-v1/;
#include <nordic/nrf5340_cpuapp_qkaa.dtsi>
#include "nrf5340_cpuapp_common.dtsi"

/ {
	model = "WaveLynx Athena Radio Application";
	compatible = "nordic,nrf5340-dk-nrf5340-cpuapp";

	chosen {
		zephyr,sram = &sram0_image;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,sram-secure-partition = &sram0_s;
		zephyr,sram-non-secure-partition = &sram0_ns;
	};

	zephyr,user {
		pcb_id_1-gpios = <&gpio1 8 0>;
		pcb_id_2-gpios = <&gpio1 6 0>;
		pcb_id_3-gpios = <&gpio0 21 0>;
	};
};

&led0 {
	gpios = <&gpio1 4 GPIO_ACTIVE_LOW>;
	label = "Rrd LED 0";
};

&led1 {
	gpios = <&gpio0 19 GPIO_ACTIVE_LOW>;
};

&led2 {
	gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
	label = "Blue LED 2";
};

buzzer: &pwm_led0 {
	pwms = <&pwm0 0 PWM_HZ(2000) PWM_POLARITY_INVERTED>;
};

&pwm0_default {
	group1 {
		psels = <NRF_PSEL(PWM_OUT0, 0, 10)>;
	};
};

&gpio_fwd {
	status = "okay";
	uart {
		gpios = <&gpio0 14 0>, <&gpio0 4 0>, <&gpio0 6 0>, <&gpio0 7 0>;
	};
};
/delete-node/ &{/buttons/};

&uart1 {
	status = "okay";
};

&uart0 {
	status = "disabled";
};

&i2c1 {
	status = "disabled";
};

&uart1_default {
	group1 {
		psels = <NRF_PSEL(UART_TX, 1, 7)>, <NRF_PSEL(UART_RTS, 0, 27)>;
	};

	group2 {
		psels = <NRF_PSEL(UART_RX, 0, 25)>;
	};
};

&uart1_sleep {
	group1 {
		psels = <NRF_PSEL(UART_TX, 1, 7)>,
				<NRF_PSEL(UART_RX, 0, 25)>,
				<NRF_PSEL(UART_RTS, 0, 27)>;
	};
};
/delete-node/ &led3;

&uart0_default {
	group1 {
		psels = <NRF_PSEL(UART_RTS, 0, 19)>;
	};

	group2 {
		psels = <NRF_PSEL(UART_CTS, 0, 21)>;
		/delete-property/ bias-pull-up;
	};
};